Class SkyroadsPlayer : Doomplayer
{
  Default {
    Player.startitem "ShipSpawner";
    Player.startitem "ShipSpawnerAmmo", 0;
    +NOGRAVITY;
    +NOCLIP;
    +SOLID;
    +DROPOFF;
    MaxStepHeight 0;
  }

  override void PostBeginPlay() {
    Super.PostBeginPlay();
    Spawn("Ship", pos, NO_REPLACE);
  }
}